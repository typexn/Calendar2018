<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/acc_edit_textview_yearmonth"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="2018 / 08 / 06"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￦:"
            android:textSize="35dp"/>

        <EditText
            android:id="@+id/acc_edit_edittext_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="금액을 임력하세요"
            android:inputType="number"
            android:singleLine="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/acc_edit_imagebutton_income"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_launcher_background"/>

        <ImageButton
            android:id="@+id/acc_edit_imagebutton_outcome"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_launcher_background"/>

    </LinearLayout>

    <GridView
        android:id="@+id/acc_edit_gridview_list"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:numColumns="4"
        android:stretchMode="columnWidth">

    </GridView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.4"
        android:gravity="center">

        <ImageButton
            android:id="@+id/acc_edit_imagebutton_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:background="@drawable/ic_launcher_background"/>

        <ImageButton
            android:id="@+id/acc_edit_imagebutton_OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:background="@drawable/ic_launcher_background"/>

    </LinearLayout>

</LinearLayout>